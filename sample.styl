vendor(prop, args)
    -webkit-{prop} args
    -moz-{prop} args
    -ms-{prop} args
    -o-{prop} args
    {prop} args

body
    margin 0
    height 100%

aside.leftPanel
    width 300px
    background silver
    height 100vh
    float left
    overflow-y scroll

nav
    clear right
    display block

    div
        width 200px
        height 50px
        background silver
        float left
        margin-left 2px
        line-height 50px !important
        font bold 15px Arial
        color white
        text-align center
        cursor pointer
        vendor('user-select', none)
        &:hover
            background skyblue
            color #000
        &:active
            color #ffffff
            background grey
        &.active, &.active:hover
            background grey
            color white


div.content
    border 1px solid grey
    width (605 - 40)px
    height calc(100vh - 100px)
    display block
    margin-left 200px
    overflow-y scroll
    margin-top -4px
    padding 20px
    font 15px callibri
    text-align justify

div.title
    margin 5px
    padding 15px
    background white
    font bold 15px Arial
    &:hover
        background skyblue

div.task
    cursor pointer
    &:hover
        background grey
    &.active
        background yellow
